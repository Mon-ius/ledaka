/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  /*background-color:#F7F9F8;*/
  overflow: hidden;
  border-top: 1rpx solid #d8d8d8;
}

.box {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}

.userinfo {
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  border-radius: 10%;
}

.userinfo-text {
  height: 120rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: #000;
}

/*.userinfo-plus{
  display: flex;
  flex-direction: row;
