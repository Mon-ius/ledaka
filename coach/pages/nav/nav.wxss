/* pages/nav/nav.wxss */

.navver {
  width: 100%;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #ebeff3;
}

.nav-title {
  width: 750rpx;
  height: 100rpx;
  background-color: #ebeff3;
  display: flex;
  flex-direction: row;
  align-items: center;
  /*border-bottom:1rpx solid black;*//*margin-top:0rpx;*/
  z-index: 100;
}

.nav-title-left {
  width: 86.25rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #d8d8d8;
  background-color: #ebeff3;
}

.nav-title-left image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: -2rpx;
}

.nav-title-left text {
  width: 80rpx;
  font-size: 28rpx;
  text-align: center;
}

.nav-title-right-top {
  width: 663rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ebeff3;
}

.nav-title-right-top navigator {
  /*flex:1;*/
  flex: 1;
  text-align: center;
  height: 81rpx;
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
  align-items: center;
}

.nav-text-top {
  width: 50%;
  background-color: #ebeff3;
  color: white;
  border-radius: 50%;
  text-align: center;
}

.main-nav-title {
  width: 750rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.main-nav-title-left {
  position: relative;
  top:-50rpx;
  width: 86.25rpx;
  height: 100%;
  /*border-right:1rpx solid black;*/
  display: flex;
  flex-direction: column;
  z-index: 50;
  /*background-color:white;*/
   /* margin-top: -50rpx;  */
  /* border: 1rpx solid red; */
}

.main-nav-title-left text {
  width: 86.25rpx;
  
  height: 103rpx;
  line-height: 103rpx;
  color: #838383;
  text-align: right;
  margin-left: -10rpx;
  font-size: 28rpx;
}

.main-nav-title-right {
  /*margin-top:15rpx;*/
  width: 663rpx;
  display: flex;
  flex-direction: row;
  /* border: 1rpx solid red; */
}

.main-nav-title-right-top {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #d8d8d8;
  overflow: hidden;
}

.main-nav-title-right-top navigator:nth-child(odd) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  line-height: 25rpx;
  font-size: 22rpx;
  text-align: center;
  border-top: 0.5rpx solid #d8d8d8;
  overflow: hidden;
}

.main-nav-title-right-top navigator:nth-child(even) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  line-height: 25rpx;
  text-align: center;
  /*border-top:0.5rpx solid white; */
  overflow: hidden;
  font-size: 22rpx;
}

.main-nav-title-right-top-navigator {
  background-color: #81d8d0;
  color: #353535;
  overflow: hidden;
  height: 50px;
  line-height: 25px;
}
.nowDate{
  background-color: #EDF9FA;
}

.main-nav-title-right-top-navigator {
  font-size: 22rpx;
  /*overflow: hidden;    */
}

.main-nav-title-right-top-nav {
  background-color: #e8e8e8;
  color: #353535;
  overflow: hidden;
}

.main-nav-title-right-top-nav {
  font-size: 22rpx;
  overflow: hidden;
}

.maintext {
  overflow: hidden;
}
