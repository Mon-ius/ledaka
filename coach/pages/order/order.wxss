.notice-text {
  width: 750rpx;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #d8d8d8;
  background-color: white;
  font-size: 11pt;
}

.notice-text text {
  text-align: center;
}

.notice_text_program {
  width: 150rpx;
}

.notice_text_card {
  width: 200rpx;
}

.notice_text_view {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.notice_text_qty {
  width: 150rpx;
}

.notice_text_sub {
  width: 150rpx;
}

.footer {
  height: 100rpx;
  line-height: 100rpx;
  width: 750rpx;
  background-color: #4bc1d2;
  position: fixed;
  bottom: -1rpx;
  border-radius: 5rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
}

.arrow {
  width: 26rpx;
  height: 26rpx;
  margin-top: 50rpx;
  margin-right: 30rpx;
  float: right;
}