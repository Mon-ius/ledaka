/* pointsinfo.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
  overflow: hidden;
}

.title {
  height: 180rpx;
  width: 750rpx;
  background-color: white;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

.title_left {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.title_left_img {
  width: 120rpx;
  height: 120rpx;
}

.title_right {
  height: 172rpx;
  line-height: 60rpx;
  margin-left: 0rpx;
}

.title_left_name {
  color: #000;
  font-size: 40rpx;
  width: 340rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  position: absolute;
  top: 58rpx;
  left: 160rpx;
}

.title_points {
  position: absolute;
  top: 60rpx;
  right: 65rpx;
  width: 138rpx;
}

.title_points_text {
  position: absolute;
  font-size: 45rpx;
  line-height: 60rpx;
  width: 138rpx;
  text-align: left;
  left: 46rpx;
  color: #4bc1d2;
}

.main {
  background-color: white;
  width: 750rpx;
  overflow: hidden;
}

.swiper-tab {
  width: 750rpx;
  text-align: center;
  line-height: 100rpx;
  color: #888;
  font-size: 40rpx;
  height: 160rpx;
  overflow: hidden;
}

.swiper-tab-list {
  border-top: 1rpx solid #d9d9d9;
  font-size: 36rpx;
  display: inline-block;
  height: 160rpx;
  width: 375rpx;
  overflow: hidden;
}

.box_left {
  position: absolute;
  width: 375rpx;
}

.box_right {
  position: absolute;
  width: 375rpx;
}

.text_points_title {
  position: absolute;
  top: 6rpx;
  left: 0rpx;
  width: 375rpx;
  text-align: center;
}

.text_points {
  position: absolute;
  top: 64rpx;
  left: 0rpx;
  width: 375rpx;
  text-align: center;
}

.on {
  color: #4bc1d2;
  background-color: #fff;
  height: 160rpx;
}

.other {
  background-color: #ebeff3;
}

.onplay {
  display: block;
}

.ondisplay {
  display: none;
}

.conent1 {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.conent2 {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.main_text {
  width: 700rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #353535;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  height: auto;
  overflow: hidden;
}

.main_text_text {
  width: 700rpx;
  height: auto;
  text-align: left;
  font-size: 36rpx;
  color: #000;
  line-height: 50rpx;
  letter-spacing: 2rpx;
}

.view_image {
  width: 700rpx;
  height: 700rpx;
  margin-top: 10rpx;
  margin-left: 60rpx;
  overflow: hidden;
}

.view_image_img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  float: left;
}

.item_class {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  margin-top: 10rpx;
  height: 130rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #d9d9d9;
}

.item_text_time {
  width: 200rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.item_text_name {
  width: 210rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  margin-left: 20rpx;
  overflow: hidden;
}

.item_text_point {
  width: 120rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  text-align: right;
  overflow: hidden;
  color: #888;
  margin-left: 0rpx;
}

.item_text_time_l {
  width: 260rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.item_text_name_l {
  width: 260rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  margin-left: 10rpx;
  overflow: hidden;
}

.item_text_point_l {
  width: 150rpx;
  font-size: 36rpx;
  line-height: 130rpx;
  text-align: left;
  overflow: hidden;
  color: #888;
}

.arrow {
  width: 26rpx;
  height: 26rpx;
  margin-top: 53rpx;
  margin-right: 20rpx;
}

.edit-no {
  position: fixed;
  bottom: -1rpx;
  width: 100%;
}

button {
  margin: 0;
  padding: 0;
  background-color: #4bc1d2;
  width: 120rpx;
  color: white;
  font-size: 28rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 10rpx;
  text-align: center;
}

.button-hover {
  background-color: #ececec;
  border-radius: 0rpx;
}

.item_use {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.btn_use {
  margin-left: 32rpx;
  font-size: 28rpx;
}

.item_use_text {
  margin-left: 32rpx;
  font-size: 36rpx;
  color: #888;
}

.item_use_info {
  font-size: 26rpx;
  color: #888;
  margin-top: 5rpx;
  width: 160rpx;
  height: 36rpx;
  overflow: hidden;
  text-align: center;
}

.yello {
  color: #ffa500;
}
