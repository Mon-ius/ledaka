/* pages/studiomanage/bus/studentfrom/studentfrom.wxss */
@import "../../../studentinfo/studentinfo.wxss";
.container{
  margin:0rpx;
}
.from{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top:20rpx;
}
.from_top{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top:10rpx;
}
.from_icon{
  width:50rpx;
  height: 50rpx;
  margin-left:30rpx;
}
.from_top text:nth-child(2){
  margin-left:40rpx;
  flex:1;
}
.from_top text:nth-child(3){
  align-self: flex-end;
  margin-right: 30rpx;
  color: #888;
  font-size:36rpx; 
}
.from_bottom{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.from_bottom image{
  width:100rpx;
  height: 100rpx;
  margin-bottom:10rpx;
  margin-right:30rpx;
  margin-left:20rpx;
}
.from_bottom text{
  margin-left:30rpx;
  line-height: 45rpx;
  flex: 1;
  text-align: right;
  font-size:36rpx;
  color: #888;
}


.remarks{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top:20rpx;
}
.remarks_top{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top:10rpx;
}
.remarks_top text{
  margin-left:40rpx;
}
.remarks_top navigator{
  align-self: flex-end;
  margin-right: 30rpx;
  flex:1;
  text-align: right;
  color:#4bc1d2;
}
.remarks_bottom{
  width: 690rpx;
  margin:15rpx 30rpx 20rpx 30rpx;
  font-size:36rpx;
  color:#b2b2b2;
  letter-spacing:2rpx;
}