.nav {
  display: flex;
  flex-direction: row;
  height: 130rpx;
}

.nav_button {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.nav_button:nth-child(1){
  margin-left:30rpx; 
}
.nav_button:nth-child(2){
  margin-right:30rpx;
}

.nav_button_text {
  flex: 1;
  margin-top: 10rpx;
  text-align: center;
  color: #b2b2b2;
}

.nav_button_view {
  height: 6rpx;
  width: 100%;
}

.main_text_tips1 {
  position: absolute;
  top: 10rpx;
  right: 32rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  width: 160rpx;
  text-align: right;
}

.main_text_tips2 {
  position: absolute;
  top: 10rpx;
  right: 28rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  width: 180rpx;
  text-align: right;
}

.main_text_tips3 {
  position: absolute;
  top: 10rpx;
  right: 320rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  width: 180rpx;
  text-align: right;
}

.main_text_tips4{
  position: absolute;
  top: 10rpx;
  right: 380rpx;
  font-size: 28rpx;
