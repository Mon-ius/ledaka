  <view style="height:40rpx;"></view>

  <navigator class="item" url="/pages/studiomanage/setting/points/points?studio_id={{studio_id}}">
    <image class="icon" src="/images/jifen.png"></image>
    <text class="name">积分设置</text>
    <image class="arrow" src="/images/arrow.png"></image>
  </navigator>
  <navigator class="item" url="/pages/studiomanage/setting/pointslogs/pointslogs?studio_id={{studio_id}}">
    <image class="icon" src="/images/jifenlist.png"></image>
    <text class="name">会员积分记录</text>
    <image class="arrow" src="/images/arrow.png"></image>
  </navigator>

  <view style="height:40rpx;"></view>

  <navigator class="item" url="/pages/studiomanage/setting/recommend/edit/edit?studio_id={{studio_id}}">
