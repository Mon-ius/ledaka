  </navigator>
  <navigator class="item" url="/pages/studiomanage/setting/multiple/multiple">
    <image class="icon" src="/images/multiple.png"></image>
    <text class="name">工作室连锁</text>
    <image class="arrow" src="/images/arrow.png"></image>
  </navigator>
  <navigator class="item" url="/pages/addstudio/addstudio?studio_id={{studio_id}}">
    <image class="icon" src="/images/update.png"></image>
    <text class="name">基本信息修改</text>
    <image class="arrow" src="/images/arrow.png"></image>
  </navigator>
