/* pages/myinfo/myinfo.wxss */

.container {
  display: flex;
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  margin-bottom: 100rpx;
  background-color: white;
}

.conent1 {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.conent2 {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.title {
  height: 185rpx;
  width: 750rpx;
  background-color: white;
  font-size: 30rpx;
  color: #353535;
  overflow: hidden;
}

.title_left {
  position: absolute;
  height: 180rpx;
  left: 20rpx;
}

.title_left_img {
  margin-top: 33rpx;
  width: 120rpx;
  height: 120rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.title_right {
  position: absolute;
  height: 172rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
}

.title_left_name {
  color: #000;
  font-size: 36rpx;
  width: 280rpx;
  position: absolute;
  left: 180rpx;
  top: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.title_left_sign {
  position: absolute;
  left: 180rpx;
  top: 100rpx;
  color: #b2b2b2;
  font-size: 30rpx;
  width: 280rpx;
  line-height: 34rpx;
  height: 68rpx;
  overflow: hidden;
}

.title_left_room {
  position: absolute;
  top: 34rpx;
  right: 20rpx;
  color: #b2b2b2;
  font-size: 30rpx;
  width: 300rpx;
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.title_qrcode {
  position: absolute;
  top: 23rpx;
  right: 33rpx;
}

.title_qrcode_img {
  width: 120rpx;
  height: 120rpx;
}

.title_phone {
  position: absolute;
  top: 108rpx;
  right: 20rpx;
  width: 238rpx;
}

.title_phone_img {
  position: absolute;
  right: 210rpx;
  height: 38rpx;
  width: 38rpx;
}

.title_phone_text {
  position: absolute;
  font-size: 30rpx;
  line-height: 38rpx;
  width: 238rpx;
  color: #4bc1d2;
  text-align: right;
}

.main {
  background-color: white;
  width: 750rpx;
  overflow: hidden;
  border-bottom: 5rpx solid #ebeff3;
  border-top: 5rpx solid #ebeff3;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  margin-top: 10rpx;
  color: #888;
  font-size: 40rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  
}

.swiper-tab-list {
  font-size: 36rpx;
  display: inline-block;
  height: 90rpx;
  flex: 1;
  border: 1rpx solid white;
}



.on {
  color: #4bc1d2;
  height: 95rpx;
  width: auto;
}
/* 
.other {
  background-color: #ebeff3;
} */


.swiper-box {
  display: block;
  height: 100%;
  width: 750rpx;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.edit {
  position: fixed;
  bottom: -2rpx;
  width: 100%;
}

button {
  margin: 0;
  padding: 0;
  background-color: #4bc1d2;
  width: 100%;
  color: white;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0rpx;
  text-align: center;
}

.button-hover {
  background-color: #ececec;
}

.onplay {
  display: block;
}

.ondisplay {
  display: none;
}

.view_image {
  width: 700rpx;
  height: 700rpx;
  margin-top: 10rpx;
  margin-left: 60rpx;
  overflow: hidden;
}

.view_image_img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  float: left;
}

.main_text {
  width: 700rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #353535;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  height: auto;
  overflow: hidden;
}

.main_text_text {
  width: 700rpx;
  height: auto;
  text-align: left;
  font-size: 36rpx;
  color: #000;
  line-height: 50rpx;
  letter-spacing: 2rpx;
}

.item_class {
  display: flex;
  width: 750rpx;
  margin-top: 10rpx;
  height: 130rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #d9d9d9;
}

.item_class_img {
  margin-left: 30rpx;
  margin-top: 5rpx;
  width: 110rpx;
  height: 110rpx;
}

.item_text_name {
  /*width: 280rpx;*/
  flex: 1;
  font-size: 36rpx;
  line-height: 130rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.item_text_classify {
  width: 50rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: left;
}

.item_text_desc {
  flex: 4;
  width: 540rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: left;
  overflow: hidden;
  color: #888;
}

.arrow {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  margin-top: 48rpx;
  margin-left: 20rpx;
  right: 40rpx;
}

.btn_left {
  position: fixed;
  bottom: -1rpx;
  left: 0rpx;
  width: 49.9%;
  background-color: #81d8d0;
  border-radius: 0rpx;
  color: white;
}

.btn_right {
  position: fixed;
  bottom: -1rpx;
  left: 50%;
  width: 49.9%;
  background-color: #4bc1d2;
  border-radius: 0rpx;
  color: white;
}
