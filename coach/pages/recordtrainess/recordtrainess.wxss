/* pages/recordtrainess/recordtrainess.wxss */
.container {
  height: 100%;
  width:750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow:hidden;
}
.remark{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color:white;
  overflow:hidden;
  margin-top:20rpx;
}
.remark_top{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.remark_top_text{
  flex: 4;
  border-bottom:1rpx solid #d8d8d8;
  margin-left: 30rpx;
  font-weight: bold;
  color:black;
}
.remark_top_button{
  flex: 1;
  border-bottom:1rpx solid #d8d8d8;
  text-align: right;
  margin-right:30rpx;
  color:#4BC1D2;
  height: 100%;
}
.remark_bottom{
    margin:20rpx 30rpx 20rpx 30rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    font-size:30rpx;
}