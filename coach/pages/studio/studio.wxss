.news-middle {
  flex: 1;
  display: flex;
  flex-direction: row;
  font-size: 31rpx;
  margin-left: 30rpx;
  color: #888;
  height: 50rpx;
  overflow: hidden;
}

.news-bottom {
  flex: 1;
  display: flex;
  flex-direction: row;
  font-size: 11pt;
  color: #888;
}

.news-bottom text:nth-child(1) {
  width: 370rpx;
  /*border:1rpx solid black;*/
  color: #888;
}

.news-bottom text:nth-child(2) {
  width: 190rpx;
  /*border:1rpx solid black;*/
  text-align: right;
  margin-right: 30rpx;
  /*margin-right:30rpx;*/
  color: #888;
}

.arrow {
  width: 26rpx;
  height: 26rpx;
  margin-top: 25rpx;
  margin-right: 20rpx;
  text-align: right;
}

.footer {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background-color: #4bc1d2;
  position: fixed;
  bottom: 0rpx;
  /*display: flex;*/
  font-size: 40rpx;
  /*flex-direction: row;*/
  align-items: center;
  text-align: center;
  color: white;
}

.edit {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background-color: #4bc1d2;
  font-size: 40rpx;
  align-items: center;
  text-align: center;
  color: white;
}
