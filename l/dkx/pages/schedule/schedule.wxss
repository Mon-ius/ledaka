  margin-top: 180rpx;
}

.fullcalendar-header .fullcalendar-header__button {
  background-color: transparent;
  line-height: 1;
  padding: 6rpx;
}

.fullcalendar-header .fullcalendar-header__button:hover {
  background-color: #eee;
}

.calendar-week.calendar-week-header {
  font-size: 34rpx;
