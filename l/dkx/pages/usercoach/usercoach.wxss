.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color:#F7F9F8;
  overflow:hidden;
  border-top:1rpx solid #D8D8D8;
}

.viewbox{
  position: relative;
}
.viewdelitem{
  position: absolute;
  right:0;
  top:0;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  color:white;
  width:140rpx;
  z-index: 0;
  background-color:red;
}
.notice-text{
  width:750rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:1rpx solid #D8D8D8;
  background-color:white;
  position: relative;
    z-index: 10;
   
}
.userlcon{
  width: 98rpx;
  height: 98rpx;
  margin-left:30rpx;
  margin-right:30rpx;
}
.notice_text_name{
    flex:1;
    color:#353535;
    font-size:36rpx;
}
.notice-text text:nth-child(3){
  color:#b2b2b2;
  font-size: 34rpx;
  text-align:right;
  margin-right:30rpx;
  width:120rpx;
}
.footer
{   
    text-align: center;
    background-color:#4BC1D2;
    color:white;
    height:100rpx;
    line-height: 100rpx;
    width:100%;
