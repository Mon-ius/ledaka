.swiper_img
{
  height: 735rpx;
  width:100%;
}
.swiper_img_item{
  width:100%;
}
.slide-image{
  width:100%;
}
.swiper_view
{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  border-radius: 5rpx;
  letter-spacing:2rpx;
  width:100%;
  padding-top: 20rpx;
  padding-bottom:20rpx;
}
.swiper_date
{
  margin-left:30rpx;
  margin-right:30rpx;
  color:#888888;
  margin-bottom:10rpx;
}
.swiper_text
{
  margin-left:30rpx;
  margin-right:30rpx;
  color:#888888;
}
.photo_icon
{
  width: 630rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  overflow: hidden;
  margin-left:60rpx;
  margin-top:40rpx;  
}
.photo_icon image{
  width: 60rpx;
  height: 60rpx;
}
.photo_icon_play{
  height: 120rpx;
  width: 120rpx;
}
button{
  position: fixed;
  bottom: -1rpx;
  height:100rpx;
  line-height: 100rpx;
  width:100%;
  background-color:#4BC1D2;
  font-size: 40rpx;
  border-radius: 0rpx;
  text-align: center;
  color:white;
}

.footer{
  position: fixed;
  bottom: -1rpx;
  height:100rpx;
  line-height: 100rpx;
  width:100%;
  background-color:#4BC1D2;
  font-size: 40rpx;
  border-radius: 0rpx;
  text-align: center;
  color:white;
  display: flex;
  flex-direction: row;
}
.footer button{
  flex: 1;
}