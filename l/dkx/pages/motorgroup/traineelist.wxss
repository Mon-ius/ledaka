.main{
  height:150rpx;
  background-color:white; 
  display: flex;
  flex-direction:row;
  align-items: center;
  color:black;
}
.main text{
  display:block;
}
.main-left{
  flex:1;
  height:130rpx;
  border-right:5rpx solid #F7F9F8;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.main-left-qty{
  flex:2;
  display: flex;
  flex-direction: row;
  align-items: center; 
}
.main-left-qty text:nth-child(1){
  font-size: 64rpx;
  color:#4bc1d2;
  /*text-align: center;*/
   margin-left:30rpx;
}
.main-left-qty text:nth-child(2){
  font-size: 32rpx;
  color:#b2b2b2;  
  margin-left:20rpx;
  margin-top:22rpx;
}
.main-left-text{
  display: flex;
  flex-direction: row;
  align-items: center;
 
  
}
.main-left-text text{
  color: #b2b2b2;
  font-size: 32rpx;
  margin-top:5rpx;
}
.main-left-qty image{
  margin-left:15rpx;
  margin-top:30rpx;
  height: 26rpx;
  width:20rpx;
  border-radius: 10%;
}
.main-right{
  flex:1;
  height:130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.main-right-qty{
  flex:2;
