.main-nav-title-right-top {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #d8d8d8;
  overflow: hidden;
}

.main-nav-title-right-top navigator:nth-child(odd) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 25rpx;
  text-align: center;
  border-top: 0.5rpx solid #d8d8d8;
  overflow: hidden;
}

.main-nav-title-right-top navigator:nth-child(even) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 25rpx;
  text-align: center;
  overflow: hidden;
}

.main-nav-title-right-top view:nth-child(odd) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  text-align: center;
  border-top: 0.5rpx solid #d8d8d8;
  overflow: hidden;
}

.main-nav-title-right-top view:nth-child(even) {
  width: 100%;
  flex: 1;
  height: 50rpx;
  font-size: 18rpx;
  line-height: 25rpx;
  text-align: center;
  /*border-top:0.5rpx solid white; */
  overflow: hidden;
}

