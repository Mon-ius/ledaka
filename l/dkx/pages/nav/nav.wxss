/* pages/nav/nav.wxss */

.navver {
  width: 100%;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
  background-color: white;
}

.nav-title {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /*border-bottom:1rpx solid black;*//*margin-top:10rpx;*/
  background-color: #ebeff3;
  z-index: 100;
}

.nav-title-left {
  width: 86.25rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #d8d8d8;
}

.nav-title-left image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.nav-title-left text {
  width: 80rpx;
  font-size: 26rpx;
  text-align: center;
}

.nav-text-top {
  width: 40rpx;
  height: 40rpx;
  background-color: #4bc1d2;
  color: white;
  border-radius: 50%;
  line-height: 40rpx;
  text-align: center;
}

.nav-title-right-top {
  width: 663rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nav-title-right-top navigator {
  /*flex:1;*/
  flex: 1;
  text-align: center;
  height: 81rpx;
  display: flex;
  font-size: 26rpx;
  margin-top: 15rpx;
  flex-direction: column;
  align-items: center;
}

