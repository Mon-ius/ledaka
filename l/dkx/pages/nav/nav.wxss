.main-nav-title {
  width: 750rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.main-nav-title-left {
  position: relative;
  top: -50rpx;
  width: 86.25rpx;
  height: 100%;
  /* border:1rpx solid black; */
  display: flex;
  flex-direction: column;
   z-index: 50; 
}

.main-nav-title-left text {
  width: 86.25rpx;
  height: 103rpx;
  line-height: 103rpx;
  color: #838383;
  text-align: right;
  /*padding-right:-30rpx;*/
  font-size: 28rpx;
  /*border-bottom:0.5rpx solid #F2F2F2;*/
}

