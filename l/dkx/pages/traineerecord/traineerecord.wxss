/* pages/motorgroup/traineerecord/traineerecord.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color:#F7F9F8;
  overflow:hidden;
  border-top:4rpx solid #D8D8D8;
}
.userinfo {
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}
.arrow{
    width:20rpx;
     height: 35rpx;
     text-align: right; 
     margin-right:30rpx;
     margin-left:20rpx;
}
.userinfo-avatar {
  width: 98rpx;
  height: 98rpx;
  margin-left:30rpx;
  margin-right:20rpx;
  border-radius: 10%; 
}
.userinfo-text{
  height: 98rpx;
  line-height: 49rpx;
  display: flex;
  flex-direction: column;
}
.userinfo-nickname{
  font-size:40rpx;
  color:#000000;
}
.userinfo-plus{
  display: flex;
  font-size:36rpx;
  flex-direction: row;
  align-items: center;
}
.studentqty{
  margin-top:2rpx;
  font-size:32rpx;
  color:#888888;
}
@import "../notice/notice.wxss";
.arrow{
     width:20rpx;
     height: 35rpx;
     text-align: right; 
     margin-right:30rpx;
     margin-left:20rpx;
}