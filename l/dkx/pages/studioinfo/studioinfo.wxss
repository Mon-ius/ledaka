}

.main_text {
  width: 700rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #353535;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  height: auto;
  overflow: hidden;
}

.main_text_text {
  width: 700rpx;
  height: auto;
  text-align: left;
  font-size: 36rpx;
  color: #000;
  line-height: 50rpx;
  letter-spacing: 2rpx;
}

.view_image {
  width: 700rpx;
