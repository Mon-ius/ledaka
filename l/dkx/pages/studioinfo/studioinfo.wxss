  line-height: 130rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.item_text_desc {
  width: 260rpx;
  font-size: 32rpx;
  line-height: 130rpx;
  text-align: right;
  margin-right: 10rpx;
  overflow: hidden;
  color: #888;
}

.arrow {
  width: 26rpx;
  height: 26rpx;
