.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  /*background-color: #f7f9f8;*/
  background-color: #fff;
  overflow: hidden;
  border-top: 1rpx solid #d8d8d8;
  margin-bottom: 100rpx;
}

.title {
  height: 200rpx;
  width: 750rpx;
  background-color: white;
  overflow: hidden;
  border-bottom: 5rpx solid #ebeff3;
  display: flex;
  flex-direction: row;
}

.title_left {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

.title_left_img {
  width: 120rpx;
  height: 120rpx;
}

.title_right {
  height: 172rpx;
  line-height: 60rpx;
  margin-left: 0rpx;
  margin-top: 50rpx;
}

.title_left_name {
  color: #000;
  font-size: 36rpx;
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  position: absolute;
  top: 25rpx;
  left: 160rpx;
}

.title_adds_img {
  width: 29rpx;
  height: 38rpx;
  position: absolute;
  top: 85rpx;
  left: 160rpx;
}

.title_left_adds {
  position: absolute;
  top: 115rpx;
  /* left: 206rpx; */
  left: 160rpx;
  width: 540rpx;
  height: 72rpx;
  overflow: hidden;
  line-height: 36rpx;
  font-size: 31rpx;
}

.title_left_adds text {
  font-size: 31rpx;
  color: #b2b2b2;
  line-height: 36rpx;
}

.title_phone {
  position: absolute;
  top: 76rpx;
  /* left: 163rpx; */
  left: 113rpx;
  width: 425rpx;
}

.title_phone_img {
  position: absolute;
  height: 38rpx;
  width: 38rpx;
}

.title_phone_text {
  position: absolute;
  font-size: 33rpx;
  line-height: 38rpx;
  width: 425rpx;
  color: #4bc1d2;
  text-align: left;
  left: 46rpx;
}

.main {
  background-color: white;
  width: 100%;
  overflow: hidden;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #888;
  font-size: 40rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  /* border: 1rpx solid red; */
  flex-direction: row;
}

.swiper-tab-list {
    border: 1rpx solid white;  
  font-size: 36rpx;
  display: inline-block;
  height: 90rpx;
  flex: 1;
  /* overflow: hidden; */
}

.on {
  color: #4bc1d2;
  /* border-bottom: 6rpx solid #4bc1d2; */
  /* border-bottom:length 10rpx;   *//* background-color: #fff; */
